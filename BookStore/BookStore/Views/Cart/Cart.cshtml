@using BookStore.Models;
@model List<Cart>
@{
    ViewBag.Title = "Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cart</h2>
<table>
    <tr>
        <td>Tên sách</td>
    </tr>
    <tr>
        <td>Ảnh bìa</td>
    </tr>
    <tr>
        <td>Đơn giá</td>
    </tr>
    <tr>
        <td>Số lượng</td>
    </tr>
    <tr>
        <td>Thành tiền</td>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.NameOfBook</td>
        </tr>
        <tr>
            <td><img src="@Url.Content("~/Picture"+item.Picture)"/></td>
        </tr>
        <tr>
            <td>@item.Cost</td>
        </tr>
        <tr>
            <td>@item.Amount</td>
        </tr>
        <tr>
            <td>@item.SumPrice</td>
        </tr>
    }
</table>
